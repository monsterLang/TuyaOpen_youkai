config CHIP_CHOICE
    string
    default "esp32c3"

config BOARD_CHOICE
    string
    default "ESP32-C3"

config UART_NUM0_TX_PIN
    int "UART_NUM0_TX_PIN"
    range 0 21
    default 21
    ---help---
        esp32-c3 default 21

config UART_NUM0_RX_PIN
    int "UART_NUM0_RX_PIN"
    range 0 21
    default 20
    ---help---
        esp32-c3 default 20

choice ESP32C3_BOARD_EX_MODULE
    prompt "choose expansion module for esp32 c3"
    default ESP32C3_BOARD_EX_MODULE_LCD_ST7735

    config ESP32C3_BOARD_EX_MODULE_LCD_ST7735
        bool "1.8 inch 128x160 rgb565 LCD"
        select ENABLE_DISPLAY
        select ENABLE_TOUCH
endchoice